{
	"manifest_version": 3,
	"name": "Spiritual Quotes Widget",
	"description": "A Chrome extension that displays spiritual and motivational quotes in a widget.",
	"version": "1.0",
	"action": {
	  "default_popup": "widget.html",
	  "default_icon": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	  }
	},
	"permissions": [
	  "activeTab"
	],
	"background": {
	  "service_worker": "background.js"
	},
	"icons": {
	  "16": "icons/icon16.png",
	  "48": "icons/icon48.png",
	  "128": "icons/icon128.png"
	}
  }
  